# Force LF line endings for all shell/SLURM scripts regardless of OS
*.sh        text eol=lf
*.sbatch    text eol=lf
*.py        text eol=lf
*.yaml      text eol=lf
*.yml       text eol=lf
*.jsonl     text eol=lf
*.json      text eol=lf
*.md        text eol=lf
*.txt       text eol=lf

